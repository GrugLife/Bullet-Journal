<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new Bullet</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/bullet" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="task" placeholder="bullet name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="bullet description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="dueDate" placeholder="Due Date">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/bullet">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>