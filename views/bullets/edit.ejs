<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= bullet.task %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/bullet/<%= bullet._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="task" value="<%= bullet.task %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= bullet.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/bullet">Go Back</a>
        </div> 
    </div>
</div>

<% include ../partials/footer %>