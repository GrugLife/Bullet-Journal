<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a New Task to <%= bullet.task %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/bullet/<%= bullet._id %>/tasks" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="task[task]" placeholder="task">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/bullet/:id/tasks">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>