<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a New Note to <%= bullet.task %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/bullet/<%= bullet._id %>/notes" method="POST">
                <div class="form-group">
                    <label for="comment">Comment:</label>
                    <textarea class="form-control" rows="5" id="comment" type="text" name="note[text]" placeholder="text">
                        
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/bullet">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>